<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="UptakeCodingQuestion.domain">
    <class name="Family" table="Families">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <list name="people" cascade="all-delete-orphan">
            <key column="Families_id" foreign-key="UptakeCodingQuestion.domain.Family" not-null="true"/>
            <list-index column="idx"/>
            <one-to-many class="UptakeCodingQuestion.domain.People"/>
        </list>
    </class>
</hibernate-mapping>